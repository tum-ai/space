{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["tsconfig.json"],
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "standard-with-typescript"
  ],
  "rules": {
    "quotes": ["error", "single"],

    /* Custom */
    // Indent with 4 spaces
    "indent": ["error", 4],
    "indent-legacy": ["error", 4],

    "@typescript-eslint/indent": ["error", 4],

    "@typescript-eslint/comma-dangle": ["error"],

    "@typescript-eslint/comma-dangle": ["error"]

  }
}
